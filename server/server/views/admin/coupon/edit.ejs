<% include ../header %>

<!-- 路径导航 -->
<ol class="breadcrumb">
    <li>
        <a href="#">栏目管理</a>
    </li>
    <li class="active">编辑栏目</li>
</ol>
<!-- 路径导航 END -->


<!-- 表单 -->
<div class="container">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">

            <form action="/admin/category/doedit" class="userForm" method="POST" enctype="multipart/form-data">
                <input type="hidden" value="<%=dataone.id%>" name="id">

                <div class="input-group">
                    <span class="input-group-addon">栏目排序</span>
                    <input type="text" class="form-control" name="order" value="<%=dataone.order%>">
                </div>
                <div class="input-group">
                    <span class="input-group-addon">栏目名称</span>
                    <input type="text" class="form-control" name="name" value="<%=dataone.name%>">
                </div>
                <div class="input-group">
                    <span class="input-group-addon">文章封面 </span>
                    <div class="form-control">
                        <img src="/upload/<%=dataone.imgurl%>" width="50">
                    </div>
                
                    <input type="file" class="form-control" name="imgurl">
                </div>
                <div class="input-group">
                    <input type="submit">
                </div>
            </form>


        </div>
        <div class="col-md-4"></div>
    </div>

</div>
<!-- 表单 end -->








<% include ../footer %>