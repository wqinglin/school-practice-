<% include ../header %>
    <!-- 路径导航 -->
    <ol class="breadcrumb">
        <li>
            <a href="#">栏目管理</a>
        </li>
        <li class="active">添加列表</li>
    </ol>
    <!-- 路径导航 END -->
    <table class="table table-hover">
        <tr>
            <td>排序</td>
            <td>栏目名称</td>
            <td>栏目封面</td>
            <td>创建时间</td>
            <td>操作</td>
        </tr>
        <% data.forEach(function(val){ %>
            <tr>
                <td><%=val.order%></td>
                <td><%=val.name%></td>
                <td>
                    <img src="/upload/<%=val.imgurl%>" width="50">
                </td>
                <td><%=val.createdAt.toLocaleString()%></td>
                <td>
                    <a href="/admin/category/edit/<%=val.id%>">编辑</a>
                    |
                    <a href="/admin/category/del/<%=val.id%>" onclick="return confirm('您确定要删除吗？')">删除</a>
                </td>
            </tr>
        <% })%>
    </table>
<% include ../footer %>
