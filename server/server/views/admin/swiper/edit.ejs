<% include ../header %>


    <!-- 路径导航 -->
    <ol class="breadcrumb">
        <li>
            <a href="#">轮播图管理</a>
        </li>
        <li class="active">修改轮播图</li>
    </ol>
    <!-- 路径导航 END -->


    <!-- 发布文章 -->
    <div class="container articleAdd">
        <div class="row">
            <form action="/admin/swiper/doedit?id=<%=dataone.id%>" method="POST" enctype="multipart/form-data">
                
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">轮播图标题</span>
                        <input type="text" class="form-control" name="title" value="<%=dataone.title%>">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">轮播图连接</span>
                        <input type="text" class="form-control" name="title" value="<%=dataone.url%>">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-addon">轮播图图像 </span>
                        <div  class="form-control">
                            <img src="/upload/<%=dataone.imgurl%>" width="50">
                        </div>
                        
                        <input type="file" class="form-control" name="imgurl">
                    </div>
                </div>
                <div class="col-md-6">
                    <input class="reset" type="reset">
                </div>
                <div class="col-md-6">
                    <input class="submit" type="submit">
                </div>
            </form>
        </div>
    </div>


    <% include ../footer %>